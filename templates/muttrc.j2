# {{ ansible_managed }}
set tmpdir="~/tmp"
set folder="~/.mutt"
set record="+sent"
# The sendmail configuration line below can be commented and the two commented lines after it
# uncommented in order to send unauthenticated email via SMTP on localhost:25 via Mutt
{% if user.value.users_phpfpm_sendmail_from is defined %}
set sendmail="/usr/sbin/sendmail -f{{ user.value.users_phpfpm_sendmail_from }}"
{% else %}
set sendmail="/usr/sbin/sendmail -f{{ user.key }}@{{ inventory_hostname }}"
{% endif %}
# set smtp_url=smtp://localhost:25/
# set ssl_starttls=no
set hostname="{{ inventory_hostname }}"
{% if user.value.users_phpfpm_sendmail_from is defined %}
set from="{% if user.value.users_name is defined %}{{ user.value.users_name }} {% endif %}<{{ user.value.users_phpfpm_sendmail_from }}>"
{% else %}
set from="{% if user.value.users_name is defined %}{{ user.value.users_name }} {% endif %}<{{ user.key }}@{{ inventory_hostname }}>"
{% endif %}
