# {{ ansible_managed }}
*filter
:INPUT ACCEPT [755:82388]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [536:477294]
-A INPUT -d 127.0.0.0/8 ! -i lo -j REJECT --reject-with icmp-port-unreachable
-A INPUT -d 127.0.0.0/8 -i lo -j ACCEPT
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p tcp -m tcp --dport 80 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 443 -j ACCEPT
-A INPUT -p udp -m udp --dport 323 -j ACCEPT
{% if munin_servers is defined %}{% for hosts in munin_servers %}{% for host in hosts %}
-A INPUT -m state --state NEW -m tcp -p tcp -s {{ hostvars[host].ipv4_addr }} --dport 4949 -j ACCEPT
{% endfor %}{% endfor %}{% endif %}
-A INPUT -p tcp -m state --state NEW -m tcp --dport 22 -j ACCEPT
-A INPUT -p icmp -m icmp --icmp-type 8 -j ACCEPT
-A INPUT -m limit --limit 5/min -j LOG --log-prefix "iptables denied: " --log-level 7
-A INPUT -j REJECT --reject-with icmp-port-unreachable
-A FORWARD -j REJECT --reject-with icmp-port-unreachable
-A OUTPUT -j ACCEPT
COMMIT
